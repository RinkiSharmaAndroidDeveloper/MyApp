<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/backLightWhite"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/gradiuent_background"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/exam"
            android:tint="@color/white"
            android:padding="5dp"
            android:id="@+id/class_work_image"
            android:layout_height="30dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/menu_class_work"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:id="@+id/front_name"
            android:layout_toRightOf="@+id/class_work_image"
            android:layout_height="match_parent">


        </TextView>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <EditText
                android:hint="Topic :"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:id="@+id/title"
                android:background="@null"
                android:layout_marginTop="5dp"
                android:textColor="@color/darkGray"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_marginRight="20dp"
                android:id="@+id/image"
                android:src="@drawable/gallery"
                android:layout_alignParentRight="true"
                android:tint="@color/darkGray"
                android:layout_marginLeft="15dp"
                android:layout_height="30dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/title"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/view_first"
                android:background="@color/darkGray"></View>
        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/scroll"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/view_first"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
             android:hint="Write post description here ..."
                android:textSize="15sp"
                android:background="@null"
                android:gravity="start"
                android:autoLink="web"
                android:id="@+id/post"
                android:layout_height="80dp">
            </EditText>
            <ImageView
                android:layout_width="100dp"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/post_image"
                android:visibility="gone"
                android:layout_below="@+id/post"
                android:layout_height="100dp"></ImageView>

            </LinearLayout>
        </ScrollView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/scroll"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimary"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/scroll"
                android:gravity="center"

                android:layout_marginTop="10dp"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_height="50dp">

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/class_spin"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"/>
              <View
                  android:layout_width="1dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:id="@+id/view_one"
                  android:layout_alignRight="@+id/class_spin"
                  android:background="@color/darkGray"
                  android:layout_height="match_parent"></View>

                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/section_spin"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:layout_alignRight="@+id/view_one"
                    android:layout_marginBottom="2dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/view_one_section"
                    android:layout_alignRight="@+id/section_spin"
                    android:background="@color/darkGray"
                    android:layout_height="match_parent"></View>
                    <Spinner
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:id="@+id/subject_spin"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:layout_alignRight="@+id/view_one"
                        android:layout_marginBottom="2dp"/>
                </LinearLayout>
                <Button
                    android:text="Post"
                    android:layout_width="70dp"
                    android:textSize="14sp"
                    android:id="@+id/button_post"
                    android:layout_alignParentRight="true"
                    android:background="#00aced"
                    android:textColor="@color/white"

                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/progress"
        android:layout_height="50dp"></ProgressBar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginBottom="70dp"
        android:nestedScrollingEnabled="false"
        android:background="@color/backLightWhite"
        />


</LinearLayout>
</androidx.core.widget.NestedScrollView>